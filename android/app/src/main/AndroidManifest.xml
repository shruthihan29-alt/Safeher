<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.safeher">

    <!-- âœ… PERMISSIONS actually needed by the app -->

    <!-- Firebase / HTTP / Nominatim / Maps links -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Location for Safe Route, reporting, live location sharing -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Vibration for fake incoming police call -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Camera for fake police video call preview -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Camera is nice-to-have, not required to install the app -->
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />

    <application
        android:name="${applicationName}"
        android:label="safeher"
        android:icon="@mipmap/launcher_icon"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- Optional: queries (you can keep or remove if not needed) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>

</manifest>
